{
	"name": "@fast-ai/ui-components",
	"version": "0.0.2-alpha.1",
	"license": "MIT",
	"description": "Common UI components",
	"main": "src/index.js",
	"module": "src/index.js",
	"publishConfig": {
		"access": "public",
		"directory": "build"
	},
	"scripts": {
		"build": "yarn build:cjs && yarn build:esm && yarn build:es && yarn build:umd && yarn build:copy-files",
		"build:cjs": "cross-env NODE_ENV=production BABEL_ENV=cjs babel --config-file ../../babel.config.js ./src --out-dir ./build --ignore \"**/*.test.js\"",
		"build:esm": "cross-env NODE_ENV=production BABEL_ENV=esm babel --config-file ../../babel.config.js ./src --out-dir ./build/esm --ignore \"**/*.test.js\"",
		"build:es": "cross-env NODE_ENV=production BABEL_ENV=es babel --config-file ../../babel.config.js ./src --out-dir ./build/es --ignore \"**/*.test.js\"",
		"build:umd": "cross-env BABEL_ENV=production-umd rollup -c scripts/rollup.config.js",
		"build:copy-files": "node ../../tools/copy-files.js",
		"prebuild": "rimraf build"
	},
	"devDependencies": {
		"@babel/core": "^7.7.5",
		"bootstrap": "^4.3.0",
		"enzyme": "^3.11.0",
		"fs-extra": "^8.1.0",
		"react-intl": "^3.2.0"
	},
	"dependencies": {
		"@rebass/forms": "^4.0.6",
		"@rebass/preset": "^4.0.5",
		"@restart/hooks": "^0.3.19",
		"emotion-theming": "^10.0.19",
		"invariant": "^2.2.4",
		"ramda": "^0.26.1",
		"ramda-extension": "^0.10.0",
		"react-text-mask": "^5.4.3",
		"react-transition-group": "^2.7.0",
		"rebass": "^4.0.7",
		"tinycolor2": "^1.4.1"
	},
	"peerDependencies": {
		"@emotion/core": "^10.0.0",
		"prop-types": "^15.6.2",
		"react": "^16.8.6",
		"react-dom": "^16.6.0",
		"react-intl": "^3.2.0"
	}
}
